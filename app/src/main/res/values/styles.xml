<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fontMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:background">@drawable/bg_main_tv</item>
        <item name="android:paddingStart">@dimen/dimen_14dp</item>
        <item name="android:paddingEnd">@dimen/dimen_14dp</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:typeface">monospace</item>
    </style>
</resources>
